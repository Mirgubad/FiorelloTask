@using FiorelloTaskFronToBack.Areas.Admin.ViewModels.FaqPage;
@model FaqComponentDetailsViewModel;
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Faq Component </h4>

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Order</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Id</td>
                        <td>@Model.Title</td>
                        <td>@Html.Raw(Model.Description)</td>
                        <td>@Model.Order</td>
                    </tr>
                </tbody>
            </table>
            <a class="btn btn-primary mt-2" asp-action="updateorder" asp-controller="faqpage" asp-area="admin" asp-route-id="@Model.Id"> Change Order</a>
            <a class="btn btn-light mt-2" asp-action="index" asp-controller="faqpage" asp-area="admin">Cancel</a>
        </div>
    </div>
</div>