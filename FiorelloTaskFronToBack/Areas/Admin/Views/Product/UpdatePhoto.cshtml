@using FiorelloTaskFronToBack.Areas.Admin.ViewModels.Product;
@using FiorelloTaskFronToBack.Models
@model ProductPhotoUpdateViewModel;

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Product</h4>
            <div class="row">
                <form method="post" >
                    <div class="form-group">
                        <label asp-for="@Model.Order"></label>
                        <input asp-for="@Model.Order" class="form-control">
                        <span asp-validation-for="@Model.Order"></span>
                    </div>
                    <button asp-action="updatephoto" asp-controller="product" asp-route-id="@Model.Id" type="submit" class="btn btn-primary">Submit</button>
                    <a class="btn btn-light" asp-action="index" asp-controller="product" asp-area="admin">Cancel</a>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_FormValidationPartial")
    <script src="https://cdn.ckeditor.com/ckeditor5/35.2.1/classic/ckeditor.js"></script>

    <script>
        ClassicEditor
            .create(document.querySelector('#Description'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
    </script>
}
