@using FiorelloTaskFronToBack.Areas.Admin.ViewModels.HomeMainSlider;
@model HomeMainSliderCreateViewModel;

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">ADD Home Slider</h4>
            <div class="row">
                <form method="post" asp-action="create" asp-controller="homemainslider" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="@Model.Title"></label>
                        <input asp-for="@Model.Title" class="form-control">
                        <span asp-validation-for="@Model.Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Description"></label>
                        <textarea asp-for="@Model.Description" class="form-control"></textarea>
                        <span asp-validation-for="@Model.Description"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.SubPhoto"></label>
                        <input asp-for="@Model.SubPhoto" class="form-control">
                        <span asp-validation-for="@Model.SubPhoto"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.SliderPhotos"></label>
                        <input asp-for="@Model.SliderPhotos" class="form-control">
                        @{
                            if (Html.ViewData.ModelState["SliderPhotos"] != null)
                            {
                                foreach (var error in Html.ViewData.ModelState["SliderPhotos"].Errors)
                                {
                                    <li class="text-danger">@error.ErrorMessage</li>
                                }
                            }
                        }
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a class="btn btn-light" asp-action="index" asp-controller="homemainslider" asp-area="admin">Cancel</a>

                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_FormValidationPartial")
    <script src="https://cdn.ckeditor.com/ckeditor5/35.2.1/classic/ckeditor.js"></script>

    <script>
        ClassicEditor
            .create(document.querySelector('#Description'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
    </script>
}
