@using FiorelloTaskFronToBack.Areas.Admin.ViewModels.Blog;
@model BlogDetailsViewModel;
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Blog Table</h4>
            <div>
                <a asp-action="create" asp-controller="blog" class="btn btn-success">Add Blog</a>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">MainPhoto</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Create Time</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Id</td>
                        <td><img class="img-thumbnail" style="width:100px;height:100px" src="~/assets/images/@Model.Blog.PhotoPath" /></td>
                        <td>@Model.Title</td>
                        <td>@Html.Raw(Model.Description)</td>
                        <td>@Model.Blog.Date.ToShortDateString()</td>
                    </tr>
                </tbody>
            </table>
            <h2>Blog Photos</h2>
            <div class="d-flex gap-2 mt-2">
                @{
                    foreach (var blogPhoto in Model.BlogPhoto)
                    {
                        <div class="text-center">
                            <img class="img-thumbnail" style="width:130px;height:130px" src="~/assets/images/@blogPhoto.PhotoPath" />
                            <form method="post" asp-action="deletephoto" asp-controller="blog" asp-area="admin" asp-route-id="@blogPhoto.Id"> <button class="btn btn-danger mt-2 ">Delete</button></form>
                        </div>
                    }
                }
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">DescriptionHead</th>
                        <th scope="col">DescriptionEnd</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Html.Raw(Model.BlogText.DescriptionHead)</td>
                        <td>@Html.Raw(Model.BlogText.DescriptionEnd)</td>
                    </tr>
                </tbody>
            </table>
            <a class="btn btn-light mt-2" asp-action="index" asp-controller="blog" asp-area="admin">Cancel</a>
        </div>
    </div>
</div>