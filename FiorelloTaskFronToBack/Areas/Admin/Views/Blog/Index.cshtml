@using FiorelloTaskFronToBack.Areas.Admin.ViewModels.Blog;
@model BlogIndexViewModel;
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Blog Table</h4>
            <div>
                <a asp-action="create" asp-controller="blog" class="btn btn-success">Add Blog</a>
            </div>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th scope="col">Id</th>
                                <th scope="col">Logo</th>
                                <th scope="col">Title</th>
                                <th scope="col">Description</th>
                                <th scope="col">DateTime</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var blog in Model.Blogs)
                            {
                            <tr>
                                <td>@blog.Id</td>
                                <td><img class="img-thumbnail" style="width:100px;height:100px" src="~/assets/images/@blog.PhotoPath" /></td>
                                <td>@blog.Title</td>
                                <td>@Html.Raw(blog.Description)</td>
                                <td>@blog.Date.ToShortDateString()</td>
                                <td >
                                <form class="d-flex gap-2" method="post" asp-action="delete" asp-controller="blog" asp-route-id="@blog.Id">
                                        <a asp-action="update" asp-controller="blog" asp-route-id="@blog.Id" class="btn btn-warning">Update</a>
                                        <a asp-action="details" asp-controller="blog" asp-route-id="@blog.Id" class="btn btn-info">Details</a>
                                        <button class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                                
                            }
                        </tbody>
                    </table>
        </div>
    </div>
</div>