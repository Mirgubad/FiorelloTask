@using FiorelloTaskFronToBack.Areas.Admin.ViewModels.Testimonial;
@model TestimonialIndexViewModel;
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Testimonial Table</h4>
            <div>
                <a asp-action="create" asp-controller="testimonial" class="btn btn-success">Add testimonial</a>
            </div>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Title</th>
                        <th scope="col">Expert FullName</th>
                        <th scope="col">Expert Id</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var testimonial in Model.Testimonial)
                    {
                        <tr>
                            <td>@testimonial.Id</td>
                            <td>@testimonial.Title</td>
                            <td>@testimonial.FlowerExpert.Name @testimonial.FlowerExpert.Surname</td>
                            <td>@testimonial.FlowerExpert.Id</td>
                            <td>
                                <form method="post" asp-action="delete" asp-controller="testimonial" asp-route-id="@testimonial.Id" class="d-flex">
                                    <a asp-action="update" asp-controller="testimonial" asp-route-id="@testimonial.Id" class="btn btn-warning">Update</a>
                                    <a asp-action="details" asp-controller="testimonial" asp-route-id="@testimonial.Id" class="btn btn-info">Details</a>
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>