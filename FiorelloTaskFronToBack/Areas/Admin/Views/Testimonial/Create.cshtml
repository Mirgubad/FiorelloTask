@using FiorelloTaskFronToBack.Areas.Admin.ViewModels.Testimonial;
@model TestimonialCreateViewModel;

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">ADD Testimonial</h4>
            <div class="row">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="@Model.Title"></label>
                        <textarea asp-for="@Model.Title" class="form-control"></textarea>
                        <span asp-validation-for="@Model.Title"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.FlowerExpertId"></label>
                        <select asp-for="@Model.FlowerExpertId" asp-items="@Model.FlowerExpert" class="form-control"></select>
                        <span asp-validation-for="@Model.Title"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a class="btn btn-light" asp-action="index" asp-controller="testimonial" asp-area="admin">Cancel</a>
                </form>
            </div>

        </div>
    </div>
</div>


@section Scripts{
    @await Html.PartialAsync("_FormValidationPartial")

}