@using FiorelloTaskFronToBack.Areas.Admin.ViewModels.FlowerExpert;
@model FlowerExpertUpdateViewModel;

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Expert</h4>
            <div class="row">
                <form method="post" asp-action="update" asp-controller="flowerexpert" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="@Model.Name"></label>
                        <input asp-for="@Model.Name" class="form-control">
                        <span asp-validation-for="@Model.Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Surname"></label>
                        <input asp-for="@Model.Surname" class="form-control">
                        <span asp-validation-for="@Model.Surname"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Position"></label>
                        <input asp-for="@Model.Position" class="form-control">
                        <span asp-validation-for="@Model.Position"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Photo"></label>
                        <input asp-for="@Model.Photo" class="form-control">
                        <span asp-validation-for="@Model.Photo"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a asp-action="index" asp-controller="flowerexpert" asp-area="admin" class="btn btn-light mx-2"> Cancel</a>
                </form>
            </div>

        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_FormValidationPartial")
}
